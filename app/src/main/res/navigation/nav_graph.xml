<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/noteListFragment">

    <fragment
        android:id="@+id/noteListFragment"
        android:name="id.muhariananda.notemarks.ui.note.list.NoteListFragment"
        android:label="fragment_note_list"
        tools:layout="@layout/fragment_note_list" >
        <action
            android:id="@+id/action_noteListFragment_to_noteAddFragment"
            app:destination="@id/noteAddFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_noteListFragment_to_noteUpdateFragment"
            app:destination="@id/noteUpdateFragment"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_right"
            app:popEnterAnim="@anim/from_right"
            app:popExitAnim="@anim/to_left" />
    </fragment>
    <fragment
        android:id="@+id/noteAddFragment"
        android:name="id.muhariananda.notemarks.ui.note.add.NoteAddFragment"
        android:label="Add Note"
        tools:layout="@layout/fragment_note_add" >
        <action
            android:id="@+id/action_noteAddFragment_to_noteListFragment"
            app:destination="@id/noteListFragment"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_noteAddFragment_to_noteBottomSheet"
            app:destination="@id/noteBottomSheet" />
    </fragment>
    <fragment
        android:id="@+id/noteUpdateFragment"
        android:name="id.muhariananda.notemarks.ui.note.update.NoteUpdateFragment"
        android:label="Update Note"
        tools:layout="@layout/fragment_note_update" >
        <action
            android:id="@+id/action_noteUpdateFragment_to_noteListFragment"
            app:destination="@id/noteListFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left" />
        <action
            android:id="@+id/action_noteUpdateFragment_to_noteBottomSheet"
            app:destination="@id/noteBottomSheet" />
        <argument
            android:name="currentNote"
            app:argType="id.muhariananda.notemarks.data.note.models.Note" />
    </fragment>
    <fragment
        android:id="@+id/toDoListFragment"
        android:name="id.muhariananda.notemarks.ui.todo.list.ToDoListFragment"
        android:label="fragment_to_do_list"
        tools:layout="@layout/fragment_to_do_list" />
    <dialog
        android:id="@+id/noteBottomSheet"
        android:name="id.muhariananda.notemarks.ui.note.NoteBottomSheet"
        android:label="NoteBottomSheet" >
        <action
            android:id="@+id/action_noteBottomSheet_to_noteAddFragment"
            app:destination="@id/noteAddFragment" />
        <action
            android:id="@+id/action_noteBottomSheet_to_noteUpdateFragment"
            app:destination="@id/noteUpdateFragment" />
    </dialog>
</navigation>